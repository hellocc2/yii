	<div class="register clearfix">
  <div class="LoginTitle">新用户注册</div>
  <form action="user.php" method="post" name="formUser" onSubmit="return register();">
    <div class="registerLeft">
      <dl>
        <dt>用 户 名：</dt>
        <dd>
          <input name="username" type="text" style="width:180px;" id="username" onBlur="is_registered(this.value);" class="LoginText"/>
          <span id="username_notice" style="color:#FF0000"> *</span></dd>
      </dl>
      <dl>
        <dt>邮箱：</dt>
        <dd>
          <input name="email" type="text" style="width:180px;" id="email" onBlur="checkEmail(this.value);"  class="LoginText"/>
          <span id="email_notice" style="color:#FF0000"> *</span></dd>
      </dl>
      <dl class="password">
        <dt>登录密码：</dt>
        <dd>
          <input name="password" type="password" style="width:180px;" id="password1" onBlur="check_password(this.value);" onKeyUp="checkIntensity(this.value)" class="LoginText" />
          <span style="color:#FF0000" id="password_notice"> *</span>
          <ul>
            <li width="33%" id="pwd_lower">弱</li>
            <li width="33%" id="pwd_middle">中</li>
            <li width="33%" id="pwd_high">强</li>
          </ul>
        </dd>
      </dl>
      <dl>
        <dt>确认密码：</dt>
        <dd>
          <input name="confirm_password" style="width:180px;" type="password" id="conform_password" onBlur="check_conform_password(this.value);"  class="LoginText" />
          <span style="color:#FF0000" id="conform_password_notice"> *</span></dd>
      </dl>
      <dl>
        <dt>验证码：</dt>
        <dd>
          <input type="text" size="20" style="width:90px;" name="captcha" class="LoginText" />
          <img src="captcha.php?{$rand}" alt="captcha" style="vertical-align: middle;cursor: pointer;" onClick="this.src='captcha.php?'+Math.random()" /> </dd>
      </dl>
      <dl class="checkboxB">
        <dt>&nbsp;</dt>
        <dd>
          <label>
          <input name="agreement" type="checkbox" value="1" checked="checked" />
          {$lang.agreement}</label>
        </dd>
      </dl>
      <dl>
        <dt>&nbsp;</dt>
        <dd>
		   <input name="act" type="hidden" value="act_register" >
          <input type="hidden" name="back_act" value="{$back_act}" />
          <input name="Submit" type="submit" value="" class="us_Submit_reg">
        </dd>
      </dl>
    </div>
  </form>
  <div class="registerRight">{insert name='ads' id=19 num=1}</div>
</div>
