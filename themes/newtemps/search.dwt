<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>{$page_title}</title>
<meta name="Keywords" content="{$keywords}" />
<meta name="Description" content="{$description}" />
<link type="text/css" rel="stylesheet" href="static/css/global.css" />
<link type="text/css" rel="stylesheet" href="static/css/1200.css" />
<link type="text/css" rel="stylesheet" href="static/css/list.css" />
<script type="text/javascript">
var process_request = "{$lang.process_request}";
</script>
{insert_scripts files='common.js,compare.js'}{insert_scripts files='transport.js,utils.js'}
<script type="text/javascript" src="static/js/jquery-1.4.4.min.js"></script>
<script type="text/javascript" src="static/js/global.js"></script>
</head>
<body>
<!-- #BeginLibraryItem "/library/page_header.lbi" --><!-- #EndLibraryItem -->
<div class="main margin pathinfo"><!-- #BeginLibraryItem "/library/ur_here.lbi" --><!-- #EndLibraryItem --></div>
<div class="main clearfix">
  <div class="mainListLeft fl">
    <div class="listLeftMenu">
      <!--{foreach from=$categories item=cat}-->
      <dl class="{if $pid == $cat.id}on{else}{/if}">
        <dt rel="{if $pid == $cat.id}on{else}off{/if}"><strong><a href="{$cat.url}">{$cat.name|escape:html}</a></strong><span></span></dt>
        <dd class="clearfix"> 
		<!--{foreach from=$cat.cat_id item=child}-->
		<span><a href="{$child.url}">{$child.name|escape:html}</a></span> 
 		<!--{/foreach}-->
		</dd>
      </dl>
	  <!--{/foreach}--> 
    </div>
 	<!-- #BeginLibraryItem "/library/history.lbi" --><!-- #EndLibraryItem -->
  </div>
  <div class="mainListRight fr">
    <div class="BestItems clearfix">
      <h4>热销推荐</h4>
	  <!--{foreach from=$hot_goods item=goods}-->
      <dl>
        <dt><a href="{$goods.url}" target="_blank" title="{$goods.name|escape:html}"><img title="{$goods.name|escape:html}" src="{$goods.thumb}" /></a></dt>
        <dd>
          <p><a href="{$goods.url}" target="_blank" title="{$goods.name|escape:html}">{$goods.short_style_name}</a></p>
          <div class="price_wrap"><strong><span>￥{$goods.shop_price}</span></strong><del>￥{$goods.market_price}</del></div>
          <div class="btn_wrap"><a href="{$goods.url}" target="_blank" class="btn_buy">购买</a></div>
        </dd>
      </dl>
	  <!--{/foreach}-->
    </div>
    <a name="goods_list"></a>
    
    <div class="mod_order">
      <div class="con_list">
	    <a href="search.php?category={$category}&display={$pager.display}&brand={$brand_id}&price_min={$price_min}&price_max={$price_max}&filter_attr={$filter_attr}&page={$pager.page}&sort=salesnum&keywords={$item}&order=<!-- {if $pager.sort == 'salesnum' && $pager.order == 'ASC'} -->DESC<!-- {else} -->ASC<!-- {/if} -->#goods_list" class="Sales_{if $pager.sort == 'salesnum' && $pager.order == 'ASC'}up{else}down{/if}"></a>
	    <a href="search.php?category={$category}&display={$pager.display}&brand={$brand_id}&price_min={$price_min}&price_max={$price_max}&filter_attr={$filter_attr}&page={$pager.page}&sort=commentnum&keywords={$item}&order=<!-- {if $pager.sort == 'commentnum' && $pager.order == 'ASC'} -->DESC<!-- {else} -->ASC<!-- {/if} -->#goods_list" class="status_{if $pager.sort == 'commentnum' && $pager.order == 'ASC'}up{else}down{/if}"></a>
	    <a href="search.php?category={$category}&display={$pager.display}&brand={$brand_id}&price_min={$price_min}&price_max={$price_max}&filter_attr={$filter_attr}&page={$pager.page}&sort=shop_price&keywords={$item}&order=<!-- {if $pager.sort == 'shop_price' && $pager.order == 'ASC'} -->DESC<!-- {else} -->ASC<!-- {/if} -->#goods_list" class="order_{if $pager.sort == 'shop_price' && $pager.order == 'ASC'}down{else}up{/if}"></a>
	  </div>
      <div style="float:right;margin-right:20px;" class="page1">
          <div id="pager" class="pagebar"> <span>{$page}/{$max_page}</span>  
		  <!-- {if $pager.page_first} --><a href="{$pager.page_first}">{$lang.page_first} ...</a><!-- {/if} -->
		  <!-- {if $pager.page_prev} --><a class="prev" href="{$pager.page_prev}">{$lang.page_prev}</a><!--{else}--><em class="prev">上一页</em><!-- {/if} -->
		  <!-- {if $pager.page_next} --><a class="next" href="{$pager.page_next}">{$lang.page_next}</a><!--{else}--><em class="next">下一页</em><!-- {/if} -->
		  <!-- {if $pager.page_last} --><a class="last" href="{$pager.page_last}">...{$lang.page_last}</a><!-- {/if} -->
          </div>
      </div>
    </div>
    <div class="ProductList">
      <ul class="clearfix">
		<!--{foreach from=$goods_list item=goods}-->
		<!-- {if $goods.goods_id} -->
			<li>
			  <div class="productListBox"> {if $goods.is_best}<i  class="Popularity"></i>{/if}
				<div class="listImg"><a href="{$goods.url}" target="_blank" title="{$goods.goods_name}"><img src="{$goods.goods_thumb}" alt="{$goods.goods_name}" /></a></div>
				<div class="listWrap"><strong>￥{$goods.shop_price}</strong><del>￥{$goods.market_price}</del></div>
				<div class="listText"><a href="{$goods.url}" target="_blank" title="{$goods.goods_name}">{$goods.goods_name}</a></div>
				<div class="listStar"><span>总销量:<strong>{insert name='get_goodsxs' id=$goods.goods_id}</strong></span><em>累计评论:{insert name='get_goodspl' id=$goods.goods_id}</em></div>
				<div class="listWrapBtn">
				<a href="javascript:addToCart_bak({$goods.goods_id})" class="wrapBtn1">放入购物车</a>
				<a href="{$goods.url}" target="_blank" class="wrapBtn2">购买</a></div>
			  </div>
			</li>
		<!--{/if}-->
		<!--{/foreach}-->  
      </ul>
      <div class="page">
        <div class="page1">
         <!-- #BeginLibraryItem "/library/pages.lbi" --><!-- #EndLibraryItem -->
        </div>
      </div>
    </div>
  </div>
</div>
<!-- #BeginLibraryItem "/library/help.lbi" --><!-- #EndLibraryItem -->
<!-- #BeginLibraryItem "/library/page_footer.lbi" --><!-- #EndLibraryItem -->
<!-- #BeginLibraryItem "/library/page_service.lbi" --><!-- #EndLibraryItem -->
<script type="Text/Javascript" language="JavaScript">
<!--
{literal}
function selectPage(sel)
{
  sel.form.submit();
}
{/literal}
//-->
</script>
<script type="text/javascript">
window.onload = function()
{
  Compare.init();
 // fixpng();
}
{foreach from=$lang.compare_js item=item key=key}
{if $key neq 'button_compare'}
var {$key} = "{$item}";
{else}
var button_compare = '';
{/if}
{/foreach}
var compare_no_goods = "{$lang.compare_no_goods}";
var btn_buy = "{$lang.btn_buy}";
var is_cancel = "{$lang.is_cancel}";
var select_spe = "{$lang.select_spe}";
</script>
</body>
</html>
